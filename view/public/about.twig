{% extends 'common/bases/public-base.twig' %}

{% block header_class %} header-top {% endblock %}

{% block body %} 
<section id="about" class="about section-show">
    {# <===== ABOUT-ME-INFO =====> #}
    <div class="about-me container">
        <div class="section-title">
            <h2>{{ 'about.title'|trans }}</h2>
        </div>
        <div class="row">
            <div class=" pt-4 pt-lg-0 content" data-aos="fade-left">
                <h3>{{ 'about.description'|trans }}</h3>
                <p class="fst-italic">
                    {{ 'about.subdescription'|trans }}.
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li>
                                <i class="bi bi-chevron-right"></i> <strong>{{ 'about.birthday'|trans }}:</strong> <span>28 {{ 'about.may'|trans }} 1999</span>
                            </li>
                            <li>
                                <i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>{{ contactEmail }}</span>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li>
                                <i class="bi bi-chevron-right"></i> <strong>{{ 'about.age'|trans }}:</strong> <span>{{ age }}</span>
                            </li>
                            <li>
                                <i class="bi bi-chevron-right"></i> <strong>{{ 'about.nationality'|trans }}</strong>
                            </li>
                        </ul>
                    </div>
                </div>
                <p>
                    {{ 'about.projects.link.description'|trans }} <a href={{ githubLink }} target="_blank">{{ 'common.here'|trans }}</a>
                </p>
                <p>
                    {{ 'about.funfact'|trans }}.<br>
                </p>
            </div>
        </div>

        {# <===== COUNTERS =====> #}
        <div class="counts container">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="count-box">
                        <i class="bi bi-emoji-smile"></i>
                        <span data-purecounter-start="0" data-purecounter-end="18" data-purecounter-duration="1" class="purecounter"></span>
                        <p>{{ 'about.counter.clients'|trans }}</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mt-5 mt-md-0">
                    <div class="count-box">
                        <i class="bi bi-journal-richtext"></i>
                        <span data-purecounter-start="0" data-purecounter-end="21" data-purecounter-duration="1" class="purecounter"></span>
                        <p>{{ 'about.counter.projects'|trans }}</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
                    <div class="count-box">
                        <i class="bi bi-code"></i>
                        <span data-purecounter-start="0" data-purecounter-end="1000000000" data-purecounter-duration="20000000" class="purecounter"></span>
                        <p>{{ 'about.counter.code.lines'|trans }}</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mt-5 mt-lg-0">
                    <div class="count-box">
                        <i class="bi bi-translate"></i>
                        <span data-purecounter-start="0" data-purecounter-end="5" data-purecounter-duration="1" class="purecounter"></span>
                        <p>{{ 'about.counter.coding.langs'|trans }}</p>
                    </div>
                </div>
            </div>
        </div>

        {# <===== SKILLS =====> #}
        <div class="skills container">
            <div class="section-title">
                <h2>{{ 'about.my.skills.title'|trans }}</h2>
            </div>
            <div class="skills-content">
                <div class="progress">
                    <span class="skill">PHP / Symfony <i class="val">85%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="progress">
                    <span class="skill">HTML / CSS <i class="val">80%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="progress">
                    <span class="skill">Linux <i class="val">75%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="progress">
                    <span class="skill">SQL <i class="val">65%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="progress">
                    <span class="skill">JavaScript / React<i class="val">60%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div> 
                <div class="progress">
                    <span class="skill">Java <i class="val">50%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="progress">
                    <span class="skill">Python <i class="val">40%</i></span>
                    <div class="progress-bar-wrap">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</section>
{{ encore_entry_script_tags('purecounter-js') }}
{{ encore_entry_script_tags('skills-progress-js') }}
{% endblock %}
