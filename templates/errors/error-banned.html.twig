{% extends 'common/bases/error-base.html.twig' %}

{% block title %}
    You are banned
{% endblock %}


{% block body %}
<p class="error-page-msg">
	<strong>
		{% if message != 'non-banned' %}
			You are permanently banned on this site for reason: '{{message}}'.
		{% else %}
			You are permanently banned on this site.
		{% endif %}
		<br><br>
		Please direct unban requests to {{contact_email}}
	</strong>
</p>
{% endblock %}
