{% extends 'common/bases/admin-base.html.twig' %}

{% block title %}
    confirmation
{% endblock %}

{% block component %}
<div class="admin-panel">
    {% if user_role != 'owner' %}
        <h2 class="page-title">Sorry you dont have permission to this page</h2>
    {% else %}
        <div class="new-todo-form">
            {{ form_start(ban_form) }}
                {{ form_widget(ban_form) }}
                    <button type="submit" class="input-button todo-button">Ban</button>
            {{ form_end(ban_form) }}
        </div>
    {% endif %}
</div>
{% endblock %}
