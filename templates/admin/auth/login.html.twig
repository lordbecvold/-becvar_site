{% extends 'common/bases/auth-base.html.twig' %}

{% block component %}
<main class="login-page color-white">
    {# <===== REGISTER COMPONENT LINK =====> #}
    {% if is_users_empty %}
        <center>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Users table is empty<br>Please add admin user manually <strong/><a href="/register">here</a></strong>
            </div>
        </center>
    {% endif %}

    {# <===== ERROR MSG BOX =====> #}
    {% if error_msg != null %}
        {% include "common/alerts/error-alert.html.twig" %}
    {% endif %}

    {# <===== LOGIN FORM =====> #}
    <div class="form-pos-y form">
        <h2 class="form-title">Dashboard login</h2>
    
        {{ form_start(login_form) }}
        
            {{ form_widget(login_form) }}
            <div class="right-position mr-1">
                <button type="submit" class="input-button">Sign in</button>
            </div>

        {{ form_end(login_form) }}
    </div>
</main>
{% endblock %}
