{% extends 'common/bases/public-base.html.twig' %}

{% block header_class %} header-top {% endblock %}

{% block body %}

<section id="projects" class="projects section-show">
    <div class="container">
        <div class="section-title">
            <h2>Projects</h2>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <h3 class="projects-title">Open</h3>
                {% for project in open_projects %}
                    <div class="projects-item">
                        <h4>{{project.name}}</h4>
                        <p><em>{{project.description}}</em></p>
                        <p></p><ul>
                            <li>Technology: {{project.technology}}</li>
                            <li>Source: <a href="{{project.link}}" target="_blank">source </a>on github</li>
                        </ul><p></p>
                    </div>
                {% endfor %}                    
            </div>
            <div class="col-lg-6">
                <h3 class="projects-title">Closed</h3>
                {% for project in closed_projects %}
                    <div class="projects-item">
                        <h4>{{project.name}}</h4>
                        <p><em>{{project.description}}</em></p>
                        <p></p><ul>
                            <li>Technology: {{project.technology}}</li>
                            <li>Source: <a href="{{project.link}}" target="_blank">source </a>on github</li>
                        </ul><p></p>
                    </div>
                {% endfor %}   
            </div>
        <p>You can find all my projects here: <a href="{{github_link}}" target="_blank">github </a></p>    
    </div>
</div>
</section>
{% endblock %}
